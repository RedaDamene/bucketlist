<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bucket List{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="icon" type="image/jpg" href="{{ asset('Images/favicon.png') }}" />
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}

</head>
<body>
    <header>
        {% block header %}
            <nav class="nav-bar">
                <div class="logo">
                    <img src="./{{ asset('Images/logo.png') }}" alt="Logo Bucket List">
                    <p class="logo-title">Bucket-List</p>
                </div>
                <ul class="menu">
                    <li><a href="{{ path('main_home') }}">Home</a></li>
                </ul>
            </nav>
        {% endblock %}
    </header>

    <main>
        {% block body %}
        {% endblock %}
    </main>

    <footer>
        {% block footer %}
            <p>© Bucket-List - {{ 'now' | date('Y') }}</p>
        {% endblock %}
    </footer>
</body>
</html>
