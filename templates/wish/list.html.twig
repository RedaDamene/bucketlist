{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste de souhait</h1>
    <div class="blagueAPI">
{#        {% for blague in blagues %}#}
            <p>{{ blagues["value"] }}</p>
{#        {% endfor %}#}
    </div>

    <div class="wish_main">
        {% for wish in wishList%}
            <div class="wish_card" style="display: flex; gap: 20px; justify-content: center">
                <a href="{{ path('wish_detail', {'wish': wish.id}) }}" style="text-decoration: none; color: #000;">
                    <h2 style="text-align: center; font-size: 20px">{{ wish.title }}</h2>
                    <p style="text-align: center; font-size: 16px">{{ wish.description }}</p>
                    <p style="text-align: center; font-size: 16px">{{ wish.author }}</p>
                    <p style="text-align: center; font-size: 16px">{{ wish.dateCreated | date('d-m-Y') }}</p>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} | Wish List
{% endblock %}

